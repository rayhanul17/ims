@model IMS.BusinessModel.ViewModel.UserRolesViewModel
@{
    ViewBag.Title = "ManageUserRole";
}
<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        <div class="col-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">User Management</h3>
                </div>
                <!-- /.card-header -->
                <div>
                    <div class="card-body">
                        @using (Html.BeginForm("ManageUserRole", "User", FormMethod.Post, htmlAttributes: new { @id = "myform", @class = "nav-link cmxform" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Select a user</label>
                                        <div class="form-group">
                                            @Html.DropDownListFor(m => m.UserId, (IEnumerable<SelectListItem>)ViewBag.UserList, "--Select User--", new { @class = "form-control userListBox" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Check Roles</label>
                                        <div class="col-sm-6">
                                            @for (int i = 0; i < Model.Roles.Count; i++)
                                            {
                                                <div class="form-check rolesBox">
                                                    @Html.CheckBoxFor(m => Model.Roles[i].IsChecked, new { @class = "form-check-input", @id = $"roleBox_{i}" })
                                                    @Model.Roles[i].Text
                                                    @Html.HiddenFor(m => Model.Roles[i].Value)
                                                    @Html.HiddenFor(m => Model.Roles[i].Text)
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary submitButton">Update</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $('.userListBox').change(function loadRoles() {                
                let uId = $('.userListBox').val();
                let rolesBox = $('.rolesBox');
                if (uId == '') {
                    $('.submitButton').prop('disabled', true);
                }
                else {
                    $('.submitButton').prop('disabled', false);
                }
                if (uId != null) {
                    $.ajax({
                        type: 'POST',
                        url: '/User/GetRoles',
                        data: { userId: uId },
                        success: function (data) {
                            for (let i = 0; i < rolesBox.length; i++) {
                                if (data.includes($(`#Roles_${i}__Text`).val())) {
                                    $(`#roleBox_${i}`).prop("checked", true);                                    
                                }
                                else {
                                    $(`#roleBox_${i}`).prop("checked", false); 
                                }
                            }
                        }
                    });
                }
            });

        });
    </script>
}
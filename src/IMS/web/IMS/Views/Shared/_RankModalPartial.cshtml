<div class="modal" id="rank-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Rank Update</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure, you want to delete?</p>
                @using (Html.BeginForm("", "", FormMethod.Post, new { @id = "rankForm" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="updateId" value="1" name="id" />
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <label>Current Rank</label>
                                <input class="form-control" readonly id="currentRank" value="0" name="CurrentRank" />
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label>Highest Rank</label>
                                <input class="form-control" readonly id="highestRank" value="" name="HighestRank" />
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label>Target Rank</label>
                                <input class="form-control" type="number" id="targetRank" value="1" name="targetRank" />
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancel</button>
                <button type="button" id="updateButton" class="btn btn-outline-success">Yes, Update!</button>
            </div>
        </div>
    </div>
</div>

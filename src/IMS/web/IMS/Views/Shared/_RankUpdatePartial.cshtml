<div class="modal" id="rank-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Rank Update</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure, you want to delete?</p>
                @using (Html.BeginForm("", "", FormMethod.Post, new { @id = "rankForm" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteId" value="" name="id" />
                    <label>Old Rank: </label>
                    <input readonly id="oldRank" value="10" name="oldRank" />
                    <label>New Rank: </label>
                    <input id="newRank" value="10" name="newRank" />
                }
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" id="updateButton" class="btn btn-danger">Yes, Delete!</button>
            </div>
        </div>
    </div>
</div>

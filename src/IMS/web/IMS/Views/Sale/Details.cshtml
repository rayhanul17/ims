@model IMS.BusinessModel.Dto.SaleReportDto
@{
    ViewBag.Title = "Purchase Details";

}
<div class="row">
    <div class="col-12 ">
        <button class="btn btn-outline-primary float-right" id="printBtn">Print This Page</button>
    </div>
</div>
<div class="row">    
    <div class="col-12" id="printDiv">
        <div class="card text-center">
            <div class="card-header">
                <h3>Sale Details</h3><hr />
                <h3>Customer Name: @Model.CustomerName</h3>
                <h5>Date Time: @Model.SaleDate</h5>
                <h5>Voucher ID: @Model.VoucherId</h5>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Sl</th>
                            <th>Product</th>
                            <th>Details</th>
                            <th>Unit Price (Tk)</th>
                            <th>Quantity</th>
                            <th>Total (Tk)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int count = 1;
                            foreach (var i in @Model.Products)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@i.ProductName</td>
                                    <td>@i.Description</td>
                                    <td>@i.UnitPrice</td>
                                    <td>@i.Quantity</td>
                                    <td>@i.TotalPrice</td>
                                </tr>
                                count++;
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-10">
                        <span class="float-left">Generated by IMS at @DateTime.Now</span>
                    </div>
                    <div class="col-2">
                        <span class="float-left">Grand Total: @Model.GrandTotalPrice Tk</span>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

@section Scripts{
    <script src="~/Assets/js/printThis.js"></script>
    <script>
        $(document).ready(function () {
            $('#printBtn').on('click', function () {
                console.log("hi");
                $('#printBtn').hide()
                $('#printDiv').printThis({
                    footer: ''
                });
                console.log('bye');
                $('#printBtn').show();
            })
        });
        
    </script>
} 

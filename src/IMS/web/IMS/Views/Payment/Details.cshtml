@model IMS.BusinessModel.Dto.PaymentReportDto
@{
    ViewBag.Title = "Purchase Details";

}

<div class="row" id="section-to-print">
    <div class="col-12">
        <div class="card text-center">
            <div class="card-header">
                <h3>Payment Details</h3><hr />
                <h3>Payment For: @Model.OperationType</h3>                
                <h3>Total Amount: @Model.TotalAmount</h3>                
                <h3>Total Paid: @Model.PaidAmount</h3>                
                <h3>Total Due: @Model.DueAmount</h3>                
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Sl</th>
                            <th>Amount (Tk)</th>
                            <th>Payment Method</th>
                            <th>Bank Name</th>
                            <th>Transaction ID</th>
                            <th>Payment Date</th>                            
                        </tr>
                    </thead>
                    <tbody>
                        @{int count = 1;
                            foreach (var i in @Model.PaymentDetails)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@i.Amount</td>
                                    <td>@i.PaymentMethod</td>
                                    <td>@i.Bank</td>
                                    <td>@i.TransactionId</td>
                                    <td>@i.PaymentDate</td>
                                </tr>
                                count++;
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer text-center">
                <div class="row">
                    <div class="col-md-8 text-left">
                        Generated by IMS at @DateTime.Now
                    </div>                    
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>



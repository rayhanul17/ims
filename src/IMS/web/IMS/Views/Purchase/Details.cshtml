@model IMS.BusinessModel.Dto.PurchaseReportDto
@{
    ViewBag.Title = "Purchase Details";

}

<div class="row" id="section-to-print">
    <div class="col-12">
        <div class="card text-center">
            <div class="card-header">
                <h3>Purchase Details</h3><hr />                
                <h3>Supplier: @Model.SupplierName</h3>
                <h5>Date Time: @Model.PurchaseDate</h5>
                <h5>Purchase Id: @Model.PurchaseId</h5>
                <h5>Payment Id: @Model.PaymentId</h5>  
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Sl</th>
                            <th>Product</th>
                            <th>Details</th>
                            <th>Unit Price (Tk)</th>
                            <th>Quantity</th>
                            <th>Total (Tk)</th>
                        </tr>
                    </thead>                     
                    <tbody>
                        @{int count = 1;
                            foreach(var i in @Model.Products)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@i.ProductName</td>
                                    <td>@i.Description</td>
                                    <td>@i.UnitPrice</td>
                                    <td>@i.Quantity</td>
                                    <td>@i.TotalPrice</td>                                    
                                </tr>
                                count++;
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer text-center">
                <div class="row">
                    <div class="col-md-8 text-left">
                        Generated by IMS at @DateTime.Now
                    </div>
                    <div class="col-md-4 text-right">
                        <h3 class="card-title text-center">Grand Total: @Model.GrandTotalPrice Tk</h3>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>


@section Styles
{
    <link rel="stylesheet" href="~/Assets/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/Assets/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/Assets/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <style>        
        #table td {
            text-align: center;
            vertical-align: middle;                      
        }
    </style>
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6">
                <div class="float-left">
                    <h3 class="card-title">Currently Available Products</h3>
                </div>
            </div>
            @if (User.IsInRole("SA") || User.IsInRole("Manager"))
            {   <div class="col-6">
                    <div class="float-right">
                        <a href="/Product/Create" class="btn btn-success">Add Product</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="table" class="table table-bordered table-striped table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Rank
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Brand
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Discount Price
                        </th>
                        <th>
                            Selling Price
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Image
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
               
    </div>
</div>
@Html.Partial("_ModalPartial")
@Html.Partial("_RankModalPartial")
@section Scripts
{
    <!-- DataTables  & Plugins -->
    <script src="~/Assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Assets/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Assets/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Assets/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Assets/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/Assets/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Assets/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/Assets/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script>

        $(document).ready(function () {            
            $('#table').DataTable({
                "responsive": true,
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/Product/GetProducts",
                    "type": "POST",
                    "datatype": "json",
                },
                "columns": [
                    { "name": "Rank" },
                    { "name": "Name" },
                    { "name": "Category" },
                    { "name": "Brand" },
                    { "name": "Description" },
                    { "name": "Status" },
                    { "name": "Discount Price" },
                    { "name": "Selling Price" },
                    { "name": "Quantity" },
                    { "name": "Image" }
                ],
                "columnDefs": [
                    {
                        "responsive": true,
                        "orderable": false,
                        "targets": 10,
                        "render": function (data, type, row) {
                            if ('@User.IsInRole("SA")' == 'True' || '@User.IsInRole("Manager")' == 'True') {
                                return `<button type="submit" class="btn btn-info btn-sm" onclick="window.location.href='/product/edit/${data}'">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Edit
                                                    </button>
                                                    <button type="submit" class="btn btn-danger btn-sm delete-modal m-1" data-id='${data}' value= '${data}'>
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Delete
                                                    </button>
                                                    <button type="submit" class="btn btn-warning btn-sm show-rank-modal" data-id='${data}' value= '${data}'>
                                                            <i class="fas fa-info">
                                                            </i>
                                                            Rank
                                                        </button>`;
                            }
                            else {
                                return ``;
                            }
                        }
                    },
                    {
                        "responsive": true,
                        "targets": 9,
                        "render": function (data, type, row) {
                            return `<img src='${data}' width=100px, height=100px/>`;
                        }
                    },
                    { "orderable": false, "targets": [ 2, 3, 5, 6, 7, 8, 9 ] }
                ],
                "order": [0, 'asc']
            });
        });

        $('#table').on('click', '.delete-modal', function (event) {
            var id = $(this).data("id");
            console.log(id);
            var m = $("#modal-default");
            m.find('.modal-body p').text('Are you sure you want to delete this product?');
            $("#deleteId").val(id);
            $("#deleteForm").attr("action", "/product/delete");
            console.log(m);
            m.modal('show');
        });

        $("#deleteButton").click(function () {
            $("#deleteForm").submit();

        });

        $('#table').on('click', '.show-rank-modal', function (event) {
            var id = $(this).data("id");
            console.log(id);
            var m = $("#rank-modal");
            m.find('.modal-title').text('Update Rank');
            m.find('.modal-body p').text('Are you sure you want to update this product Rank?');
            $("#updateId").val(id);
            $("#rankForm").attr("action", "/Product/UpdateRank");
            if (id != null) {
                $.ajax({
                    type: 'POST',
                    url: '/Product/GetRank',
                    data: { productId: id },
                    success: function (data) {
                        console.log(data);
                        $('#updateId').val(data.Id);
                        $('#highestRank').val(data.Count);                        
                        $('#currentRank').val(data.Rank);                        
                    }
                });
            }
            m.modal('show');
        });

        $("#updateButton").click(function () {
            console.log("Clicked");
            $("#rankForm").submit();
        });

    </script>
}

